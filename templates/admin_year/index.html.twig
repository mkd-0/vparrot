{% extends 'base.html.twig' %}

{% block title %}Liste des années{% endblock %}

{% block body %}
    <h1>Liste des années</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for year in years %}
            <tr>
                <td>{{ year.id }}</td>
                <td>{{ year.name }}</td>
                <td>
                    <a href="{{ path('app_admin_year_show', {'id': year.id}) }}">Voir</a>
                    <a href="{{ path('app_admin_year_edit', {'id': year.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune données</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_year_new') }}">Créer</a>
{% endblock %}
