{% extends 'base.html.twig' %}

{% block title %}Liste des modèles{% endblock %}

{% block body %}
    <h1>Liste des modèles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr>
                <td>{{ model.id }}</td>
                <td>{{ model.name }}</td>
                <td>
                    <a href="{{ path('app_admin_model_show', {'id': model.id}) }}">Voir</a>
                    <a href="{{ path('app_admin_model_edit', {'id': model.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune données</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_model_new') }}">Créer</a>
{% endblock %}
