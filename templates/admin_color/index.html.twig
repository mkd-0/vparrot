{% extends 'base.html.twig' %}

{% block title %}Color index{% endblock %}

{% block body %}
    <h1>Color index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for color in colors %}
            <tr>
                <td>{{ color.id }}</td>
                <td>{{ color.name }}</td>
                <td>
                    <a href="{{ path('app_admin_color_show', {'id': color.id}) }}">Voir</a>
                    <a href="{{ path('app_admin_color_edit', {'id': color.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune données</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_color_new') }}">Créer</a>
{% endblock %}
